###########################
# Oh-My-ZSH Configuration #
###########################

export PATH=$HOME/.platformio/penv/bin:$HOME/.local/bin:/usr/local/bin:$PATH
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="nanotech"
HYPHEN_INSENSITIVE="true"

zstyle ':omz:update' mode reminder  # just remind me to update when it's time
zstyle ':omz:update' frequency 7

ENABLE_CORRECTION="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="dd/mm/yyyy"

plugins=(git pip)

source $ZSH/oh-my-zsh.sh

######################
# User Configuration #
######################

export EDITOR='nvim'

# zsh-autosuggestions
if [[ -f /usr/share/zsh/plugins/zsh-autocompletions/zsh-autocompletions.zsh ]]; then
    source /usr/share/zsh/plugins/zsh-autocompletions/zsh-autocompletions.zsh
elif [[ -f /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh ]]; then
    source /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh
fi

# zsh-syntax-highlighting
if [[ -f /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]]; then
    source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
elif [[ -f /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]]; then
    source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
fi

# command-not-found
if [[ -f /usr/share/doc/pkgfile/command-not-found.zsh ]]; then
    source /usr/share/doc/pkgfile/command-not-found.zsh
fi

# Colored Output
alias dmesg='dmesg --color=always'

# Distrobox -- ROS
alias distroROS='distrobox enter ROS -a "--env QT_QPA_PLATFORM=xcb;wayland" -- zsh --login'

ros2_on(){
    export ROS_DOMAIN_ID=4
    export _colcon_cd_root=/opt/ros/jazzy/

    source /opt/ros/jazzy/setup.zsh
    source /usr/share/colcon_cd/function/colcon_cd.sh
    source /usr/share/colcon_argcomplete/hook/colcon-argcomplete.zsh
}
